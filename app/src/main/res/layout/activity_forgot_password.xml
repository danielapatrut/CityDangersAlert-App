<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center|center_horizontal"
        android:text="City Dangers Alert"
        android:textColor="#5E5959"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/viewReset"
        android:layout_width="359dp"
        android:layout_height="290dp"
        android:background="#70FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <TextView
        android:id="@+id/textViewResetPassword"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Reset password"
        android:textColor="#8C307C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/viewReset"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/viewReset"
        app:layout_constraintTop_toTopOf="@+id/viewReset" />

    <EditText
        android:id="@+id/resetPasswordEmail"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/viewReset"
        app:layout_constraintStart_toStartOf="@+id/viewReset"
        app:layout_constraintTop_toBottomOf="@+id/textViewResetPassword" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:text="reset"
        android:textSize="16sp"
        app:backgroundTint="#8C699E"
        app:cornerRadius="15dip"
        app:layout_constraintEnd_toEndOf="@+id/viewReset"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/viewReset"
        app:layout_constraintTop_toBottomOf="@+id/viewReset" />
</androidx.constraintlayout.widget.ConstraintLayout>